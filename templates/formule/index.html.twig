{% extends 'base.html.twig' %}

{% block metatitle %}Formules | Reflet d'ambiance{% endblock %}


{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Nos Formules</h1>
        <div class="row">
            {% for formule in formules %}
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        {% if formule.image %}
                            <img src="{{ asset('uploads/formules/' ~ formule.image) }}" class="card-img-top" alt="{{ formule.title }}" style="height: 200px; object-fit: cover;">
                        {% endif %}
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ formule.title }}</h5>
                            <a href="{{ path('app_formule_show', {'id': formule.id}) }}" class="btn btn-primary voir-plus mt-auto">Voir plus</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
