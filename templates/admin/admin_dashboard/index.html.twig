{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1 class="mb-4">Dashboard Admin</h1>

        <!-- Bouton de déconnexion -->
        <a href="{{ path('admin_logout') }}" class="btn btn-danger mb-3 btn-block">Se déconnecter</a>

        <!-- Section Réalisations -->
        <h2 class="mb-3">Réalisations</h2>
        <a href="{{ path('app_admin_entity_create', {'entityType': 'realisation'}) }}" class="btn btn-primary mb-3 btn-block">Ajouter une nouvelle réalisation</a>
        <div class="row">
            {% for realisation in realisations %}
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        {% if realisation.image %}
                            <img src="{{ asset('uploads/realisations/' ~ realisation.image) }}" class="card-img-top" alt="{{ realisation.title }}">
                        {% endif %}
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ realisation.title }}</h5>
                            <div class="mt-auto">
                                <a href="{{ path('app_admin_entity_show', {'entityType': 'realisation', 'id': realisation.id}) }}" class="btn btn-primary mb-2 btn-block voir-plus">Voir plus</a>
                                <a href="{{ path('app_admin_entity_edit', {'entityType': 'realisation', 'id': realisation.id}) }}" class="btn btn-secondary mb-2 btn-block">Modifier</a>
                                <form method="post" action="{{ path('app_admin_entity_delete', {'entityType': 'realisation', 'id': realisation.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette réalisation ?');" style="display: inline-block;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ realisation.id) }}">
                                    <button type="submit" class="btn btn-danger mb-2 btn-block">Supprimer</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <!-- Section Formules -->
        <h2 class="mb-3">Formules</h2>
        <a href="{{ path('app_admin_entity_create', {'entityType': 'formule'}) }}" class="btn btn-primary mb-3 btn-block">Ajouter une nouvelle formule</a>
        <div class="row">
            {% for formule in formules %}
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        {% if formule.image %}
                            <img src="{{ asset('uploads/formules/' ~ formule.image) }}" class="card-img-top" alt="{{ formule.title }}">
                        {% endif %}
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ formule.title }}</h5>
                            <div class="mt-auto">
                                <a href="{{ path('app_admin_entity_show', {'entityType': 'formule', 'id': formule.id}) }}" class="btn btn-primary mb-2 btn-block voir-plus">Voir plus</a>
                                <a href="{{ path('app_admin_entity_edit', {'entityType': 'formule', 'id': formule.id}) }}" class="btn btn-secondary mb-2 btn-block">Modifier</a>
                                <form method="post" action="{{ path('app_admin_entity_delete', {'entityType': 'formule', 'id': formule.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette formule ?');" style="display: inline-block;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ formule.id) }}">
                                    <button type="submit" class="btn btn-danger mb-2 btn-block">Supprimer</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <!-- Section Inspirations -->
        <h2 class="mb-3">Inspirations</h2>
        <a href="{{ path('app_admin_entity_create', {'entityType': 'inspiration'}) }}" class="btn btn-primary mb-3 btn-block">Ajouter une nouvelle inspiration</a>
        <div class="row">
            {% for inspiration in inspirations %}
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        {% if inspiration.image %}
                            <img src="{{ asset('uploads/inspirations/' ~ inspiration.image) }}" class="card-img-top" alt="{{ inspiration.title }}">
                        {% endif %}
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ inspiration.title }}</h5>
                            <div class="mt-auto">
                                <a href="{{ path('app_admin_entity_show', {'entityType': 'inspiration', 'id': inspiration.id}) }}" class="btn btn-primary mb-2 btn-block voir-plus">Voir plus</a>
                                <a href="{{ path('app_admin_entity_edit', {'entityType': 'inspiration', 'id': inspiration.id}) }}" class="btn btn-secondary mb-2 btn-block">Modifier</a>
                                <form method="post" action="{{ path('app_admin_entity_delete', {'entityType': 'inspiration', 'id': inspiration.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette inspiration ?');" style="display: inline-block;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ inspiration.id) }}">
                                    <button type="submit" class="btn btn-danger mb-2 btn-block">Supprimer</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/admin-dashboard.js') }}"></script>
{% endblock %}
