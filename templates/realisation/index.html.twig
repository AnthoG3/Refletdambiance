{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Nos RÃ©alisations</h1>
        <div class="row">
            {% for realisation in realisations %}
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        {% if realisation.image %}
                            <img src="{{ asset('uploads/realisations/' ~ realisation.image) }}" class="card-img-top" alt="{{ realisation.title }}" style="height: 200px; object-fit: cover;">
                        {% endif %}
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ realisation.title }}</h5>
                            <a href="{{ path('app_realisation_show', {'id': realisation.id}) }}" class="btn btn-primary voir-plus mt-auto">Voir plus</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/admin-dashboard.js') }}"></script>
{% endblock %}
