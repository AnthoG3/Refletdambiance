{% extends 'base.html.twig' %}

{% block title %}{{ realisation.title }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <a href="{{ path('app_realisation_index') }}" class="btn btn-secondary mb-4">Retour à la liste des réalisations</a>

        <div class="card">
            {% if realisation.image %}
                <img src="{{ asset('uploads/realisations/' ~ realisation.image) }}" class="card-img-top" alt="{{ realisation.title }}" style="height: 400px; object-fit: cover;">
            {% endif %}
            <div class="card-body">
                <h1 class="card-title">{{ realisation.title }}</h1>
                <p class="card-text">{{ realisation.content|raw }}</p>
            </div>
        </div>
    </div>
{% endblock %}
