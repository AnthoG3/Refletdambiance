{% extends 'base.html.twig' %}

{% block metatitle %}Inspirations | Reflet d'ambiance{% endblock %}

{% block title %}DÃ©tails de l'inspiration - {{ inspiration.title }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Inspiration : {{ inspiration.title }}</h1>

        <div class="card mt-4">
            {% if inspiration.image %}
                <img src="{{ asset('uploads/inspirations/' ~ inspiration.image) }}" class="card-img-top" alt="{{ inspiration.title }}">
            {% endif %}
            <div class="card-body">
                <h5 class="card-title">{{ inspiration.title }}</h5>
                <p class="card-text formatted-content">{{ inspiration.content|raw }}</p>
            </div>
        </div>

        <div class="text-center mt-4">
            <a href="{{ path('app_inspiration_index') }}" class="btn btn-secondary">Retour aux inspirations</a>
        </div>
    </div>
{% endblock %}
