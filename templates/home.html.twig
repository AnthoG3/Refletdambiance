{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <img class="home_wall" src="{{ asset('assets/image/fond_accueil.jpg') }}" alt="logo.accueil">
        <h2 id="round_title">Reflet d'ambiance</h2>
    </div>

    <div class="container">
        <div class="card presentation-card">
            <div class="image-container">
                <img class="image-ronde" src="{{ asset('assets/image/oceane.jpg') }}" alt="Océane">
            </div>
            <div class="text-container">
                <h2 class="card-title">Présentation</h2>
                <p>
                    Je m'appelle Océane VITRAC-MULLER,<br>
                    Je suis mariée et maman de deux petites filles.<br>
                    Vous faites construire, vous rénovez ou vous avez simplement envie de changer votre déco ?<br>
                    De la planche ambiance à la représentation 3D en passant par la planche mobilier,<br>
                    je suis là pour vous aider à vous projeter et mettre votre bien en valeur.<br>
                </p>
            </div>
        </div>
    </div>

    <div class="card contact-card">
        <div class="card-body">
            <div class="container">

                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                {% endfor %}

                <div class="row">
                    <h1 class="text-center" id="contact">Formulaire de contact</h1>
                    <div class="col">
                        {% if contactForm is defined %}
                            {{ form_start(contactForm) }}

                            <div class="form-group">
                                {{ form_label(contactForm.name, 'Prénom et nom :') }}
                                {{ form_widget(contactForm.name, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(contactForm.name) }}
                            </div>

                            <div class="form-group">
                                {{ form_label(contactForm.email, 'Email :') }}
                                {{ form_widget(contactForm.email, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(contactForm.email) }}
                            </div>

                            <div class="form-group">
                                {{ form_label(contactForm.phone, 'Téléphone :') }}
                                {{ form_widget(contactForm.phone, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(contactForm.phone) }}
                            </div>

                            <div class="form-group">
                                {{ form_label(contactForm.pieces, 'Nombre de pièces :') }}
                                {{ form_widget(contactForm.pieces, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(contactForm.pieces) }}
                            </div>

                            <div class="form-group">
                                {{ form_label(contactForm.m2, 'Nombre de m² :') }}
                                {{ form_widget(contactForm.m2, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(contactForm.m2) }}
                            </div>

                            <div class="form-group">
                                {{ form_label(contactForm.habitation, 'Type d\'habitation :') }}
                                {{ form_widget(contactForm.habitation, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(contactForm.habitation) }}
                            </div>

                            <div class="form-group">
                                {{ form_label(contactForm.foyer, 'Vous êtes : ') }}
                                {{ form_widget(contactForm.foyer, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(contactForm.foyer) }}
                            </div>

                            <div class="form-group">
                                {{ form_label(contactForm.styles, 'Quelle ambiance souhaitez-vous :') }}
                                {{ form_widget(contactForm.styles, {'attr': {'class': 'form-select'}}) }}
                                {{ form_errors(contactForm.styles) }}
                            </div>

                            <div class="form-group">
                                {{ form_label(contactForm.message, 'Description de votre projet :') }}
                                {{ form_widget(contactForm.message, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                                {{ form_errors(contactForm.message) }}
                            </div>

                            <button type="submit" class="btn btn-primary d-block mx-auto mt-3">Envoyer</button>

                            {{ form_end(contactForm) }}
                        {% else %}
                            <p>Le formulaire n'a pas été trouvé.</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
